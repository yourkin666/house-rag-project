# RAG系统环境配置示例文件
# 复制为 .env 并填入实际值

# Google API 配置
GOOGLE_API_KEY=your_google_api_key_here

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=house_knowledge_base
DB_USER=houseuser
DB_PASSWORD=securepassword123

# 向量数据库配置
COLLECTION_NAME=langchain

# 应用配置
DEBUG=False

# ==== 成本控制配置 ====
# 每小时最大LLM调用次数（降低此值可减少成本）
MAX_LLM_CALLS_PER_HOUR=50

# 中等复杂查询的LLM使用概率（0.0-1.0，降低可减少成本）
LLM_SAMPLING_RATE=0.3

# 是否启用意图缓存（True可减少重复调用）
ENABLE_INTENT_CACHE=True

# 是否启用成本追踪（True可监控使用情况）
COST_TRACKING=True

# ==== 成本优化建议 ====
# 1. 生产环境建议 MAX_LLM_CALLS_PER_HOUR=30-50
# 2. 开发测试环境可设为 MAX_LLM_CALLS_PER_HOUR=100
# 3. 如果成本敏感，可将 LLM_SAMPLING_RATE 降至 0.1-0.2
# 4. 务必保持 ENABLE_INTENT_CACHE=True 来减少重复调用
